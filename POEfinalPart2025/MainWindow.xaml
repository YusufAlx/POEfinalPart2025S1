<Window x:Class="POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybot the Secure" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="ChatList" Grid.Row="0" Margin="10" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <TextBox x:Name="UserInput" Width="680" Height="30" Margin="0,0,5,0" KeyDown="UserInput_KeyDown"/>
            <Button Content="Send" Width="75" Click="SendButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
